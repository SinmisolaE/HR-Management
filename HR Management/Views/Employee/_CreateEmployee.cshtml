@using HRService.Core.DTO
@model EmployeeViewModel


    <div class="modal-header">
        <h2 class="modal-title">Add a new Employee</h2>

        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>

    <div class="modal-body">
        <form action="/" method="post">

            <div class="form-group mb-3">
                <label asp-for="FirstName">First Name</label>
                <input type="text" class="form-control"/>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LastName">Last Name</label>
                <input type="text" class="form-control"/>
            </div>

            <div class="form-group mb-3">

                <label asp-for="Address">Address</label>
                <input type="text" class="form-control"/>
            </div>

            <div class="form-group mb-3">

                <label asp-for="Email">Email</label>
                <input type="text" class="form-control"/>
            </div>

            <div class="form-group mb-3">

                <label asp-for="DOB">Date of birth</label>
                <input type="date" class="form-control"/>
            </div>

            <div class="form-group mb-3">

                <label asp-for="DepartmentName">Department</label>
                <input type="text" class="form-control"/>
            </div>

            <div class="form-group mb-3">

                <label asp-for="JobTitle">Job</label>
                <input type="text" class="form-control"/>
            </div>

            <div class="form-group mb-3">

                <label asp-for="Grade">Grade</label>
                <input type="text" class="form-control"/>
            </div>

            <div class="form-group mb-3">

                <label asp-for="Salary">Salary</label>
                <input type="number" class="form-control"/>
            </div>

        </form>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-primary">Add Employee</button>
    <!--<button type="button" class="btn-secondary">Close</button> -->
</div>

        


